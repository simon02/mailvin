<div id="content-header">
<h1>Create a template</h1>
<div class="btn-group" style="width: auto;">
    <a class="btn btn-large tip-bottom" data-original-title="Manage Files"><i class="icon-file"></i></a>
    <a class="btn btn-large tip-bottom" data-original-title="Manage Users"><i class="icon-user"></i></a>
    <a class="btn btn-large tip-bottom" data-original-title="Manage Comments"><i class="icon-comment"></i><span class="label label-important">5</span></a>
    <a class="btn btn-large tip-bottom" data-original-title="Manage Orders"><i class="icon-shopping-cart"></i></a>
</div>
</div>
<div id="breadcrumb">
  <a href="index.html" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
  <a href="#" class="tip-bottom" data-original-title="">Templates</a>
  <a href="#" class="current">New</a>
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon">
            <i class="icon-align-justify"></i>
          </span>
          <h5>Text inputs</h5>
        </div>
        <div class="widget-content nopadding">
          <form action="/schedule" method="post" class="form-horizontal">
            <div class="control-group">
              <div class="controls">
                <h4>General template information</h4>
              </div>
              <label for='template_name' class="control-label">Template name</label>
              <div class="controls">
                <input id='template_name' type="text" name='template[name]'>
              </div>
              <label for='template_identifier' class="control-label">Template identifier</label>
              <div class="controls">
                <input id='template_identifier' type="text" name='template[identifier]'>@mailvin.com
              </div>
              <label for='template_description' class="control-label">Template description</label>
              <div class="controls">
                <textarea id='template_description' name='template[description]'></textarea>
              </div>
            </div>
            <div class="control-group email">
              <div class="controls">
                <h4>First follow up email</h4>
              </div>
              <label for='delay_type_1' class="control-label">Delay type</label>
              <div class="controls">
                <select id='delay_type_1' name='template[emails][][delay_type]'>
                  <option selected value='static'>Static</option>
                  <option value='dynamic'>Dynamic</option>
                </select>
              </div>
              <label for='delay_1' class="control-label">Delay</label>
              <div class="controls">
                <input id='delay_1' name='template[emails][][delay][days]' type='number' min='0' value='3'> days and <input name='template[emails][][delay][hours]' type='number' min='0' max='24' value='0'> hours after sending initial email
              </div>
              <label for='email_text_1' class="control-label">Email text</label>
              <div class="controls">
                <textarea id='email_text_1' name='template[emails][][text]'></textarea>
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <button type="submit" class="btn btn-primary">Save</button>
                <button id='add_email_template' class="btn">Add another follow up email</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div id='new_email_template' style='display:none'>
  <div class="control-group email">
    <div class="controls">
      <h4><span class='number' style='text-transform: capitalize'></span> follow up email</h4>
    </div>
    <label class="control-label">Delay type</label>
    <div class="controls">
      <select name='template[emails][][delay_type]'>
        <option selected value='static'>Static</option>
        <option value='dynamic'>Dynamic</option>
      </select>
    </div>
    <label class="control-label">Delay</label>
    <div class="controls">
      <input name='template[emails][][delay][days]' type='number' min='0' value='3'> days and <input name='template[emails][][delay][hours]' type='number' min='0' max='24' value='0'> hours after sending initial email
    </div>
    <label class="control-label">Email text</label>
    <div class="controls">
      <textarea name='template[emails][][text]'></textarea>
    </div>
  </div>
</div>
