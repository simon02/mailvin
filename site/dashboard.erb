<div id="content-header">
<h1>Dashboard</h1>
<div class="btn-group" style="width: auto;">
    <a class="btn btn-large tip-bottom" data-original-title="Manage Files"><i class="icon-file"></i></a>
    <a class="btn btn-large tip-bottom" data-original-title="Manage Users"><i class="icon-user"></i></a>
    <a class="btn btn-large tip-bottom" data-original-title="Manage Comments"><i class="icon-comment"></i><span class="label label-important">5</span></a>
    <a class="btn btn-large tip-bottom" data-original-title="Manage Orders"><i class="icon-shopping-cart"></i></a>
</div>
</div>
<div id="breadcrumb">
<a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
<a href="#" class="current">Dashboard</a>
</div>
<div class="container-fluid">
<div class="row-fluid">
    <div class="span12 center" style="text-align: center;">
      <ul class="stats-plain">
        <li>
          <h4>1,491</h4>
          <span>Emails sent last month</span>
        </li>
        <li>
          <h4>45%</h4>
          <span>Response rate last 30 days</span>
        </li>
        <li>
          <h4>1.5</h4>
          <span>Emails needed on average</span>
        </li>
        <li>
          <h4>20/100</h4>
          <span>Credits this month</span>
        </li>
      </ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="alert alert-info">
            Welcome to <strong>Mailvin</strong>. <a href='#'>Connect your first mailbox</a> to get started!
            <a href="#" data-dismiss="alert" class="close">×</a>
        </div>
        <%= partial :_flash %>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon">
            <i class="icon-arrow-right"></i>
          </span>
          <h5>Scheduled Emails</h5>
          <span class="label label-info tip-left" data-original-title="<%= @nr_scheduled_emails %> emails scheduled"><%= @nr_scheduled_emails %></span>
        </div>
        <div class="widget-content nopadding">
          <ul class='highlight scheduled-emails'>
            <% @scheduled_emails.each do |email| %>
            <li>
              <div class='timestamp'>
                <span class="time"><%= email[:time] %></span>
                <div class="date">
                  <span class="day"><%= email[:scheduled_at].strftime('%d') %></span>
                  <span class='month'><%= email[:scheduled_at].strftime('%^b') %></span>
                </div>
              </div>
              <div class="body">
                <h5 class='title'><%= email[:subject] %></h5>
                <div class='to'>
                  <span class='next-action'><%= email[:next_action] %></span> to <span class="email"><%= email[:to] %></span>
                </div>
              </div>
            </li>
            <% end %>
            <li class="viewall">
                <a class="tip-top" href="#" data-original-title="View all posts"> + View all + </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="span6">
        <div class="widget-box">
            <div class="widget-title">
              <span class="icon"><i class="icon-comment"></i></span>
              <h5>Past Emails</h5>
              <span class="label label-info tip-left" data-original-title="<%= @nr_past_emails %> total emails sent"><%= @nr_past_emails %></span>
            </div>
            <div class="widget-content nopadding">
              <ul class='highlight past-emails'>
                <% @past_emails.each do |email| %>
                <li>
                  <div class='timestamp'>
                    <span class="time"><%= email[:time] %></span>
                    <div class="date">
                      <span class="day"><%= email[:date][:day] %></span>
                      <span class='month'><%= email[:date][:month] %></span>
                    </div>
                  </div>
                  <div class="body">
                    <h5 class='title'><%= email[:subject] %></h5>
                    <div class='to'>
                      <span class='next-action'><%= email[:next_action] %></span> to <span class="email"><%= email[:to] %></span>
                    </div>
                  </div>
                </li>
                <% end %>
                <li class="viewall">
                    <a class="tip-top" href="#" data-original-title="View all posts"> + View all + </a>
                </li>
              </ul>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        <div class="widget-box">
            <div class="widget-title">
              <span class="icon"><i class="icon-file"></i></span><h5>Templates</h5>
              <a href='/schedule/new' class='btn btn-primary btn-small'>add template</a>
              <span class="label label-info tip-left" data-original-title="54 total posts"><%= @schedules.count %></span>
            </div>
            <div class="widget-content nopadding">
                <ul class="highlight recent-posts">
                  <% @schedules.each do |schedule| %>
                  <li>
                    <div class="body">
                      <h5 class='title'><%= schedule[:name] %> <small><%= schedule[:identifier] %>@mailvin.org</small></h5>
                      <div class='to'>
                        <%= schedule[:description] %>
                      </div>
                    </div>
                  </li>
                  <% end %>
                  <li class="viewall">
                      <a class="tip-top" href="#" data-original-title="View all posts"> + View all + </a>
                  </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="widget-box">
            <div class="widget-title">
              <span class="icon"><i class="icon-comment"></i></span><h5>Mailboxes</h5><span class="label label-info tip-left" data-original-title="<%= @mailboxes.count %> mailboxes"><%= @mailboxes.count %></span>
            </div>
            <div class="widget-content nopadding">
                <ul class="highlight recent-comments">
                  <% @mailboxes.each do |mailbox| %>
                    <li>
                      <%= mailbox.email %>
                      <% if mailbox.authenticated %>
                        <span class='subtle'>connected</span>
                      <% else %>
                        <a href='/mailbox/connect'>connect</a>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div id="footer" class="span12">
        2012 © Unicorn Admin. Brought to you by <a href="https://wrapbootstrap.com/user/diablo9983">diablo9983</a>
    </div>
</div>
</div>
